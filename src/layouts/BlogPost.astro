---
import Layout from './Layout.astro'; // Assuming Layout.astro is in the same directory or adjust path
const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title || "vvvbnbnnvc"} description={frontmatter.description}>
  <article>
    <h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
    {frontmatter.pubDate && <p class="text-sm text-gray-600 mb-4">Published on: {new Date(frontmatter.pubDate).toLocaleDateString()}</p>}
    {frontmatter.description && <p class="text-lg italic text-gray-700 mb-6">{frontmatter.description}</p>}
    <div class="prose prose-sm sm:prose lg:prose-lg xl:prose-xl max-w-none">
      <slot /> {/* Content will be injected here */}
    </div>
  </article>
</Layout>
<style is:global>
  /* Basic styling for prose content, can be expanded with Tailwind Typography or custom styles */
  .prose h1 { font-size: 2.25em; margin-bottom: 0.5em; }
  .prose h2 { font-size: 1.75em; margin-bottom: 0.4em; }
  .prose p { margin-bottom: 1em; }
  .prose a { color: #007acc; }
  .prose blockquote { border-left: 3px solid #ccc; padding-left: 1em; margin-left: 0; font-style: italic; }
  .prose pre { background-color: #f5f5f5; padding: 1em; border-radius: 4px; overflow-x: auto; }
</style>